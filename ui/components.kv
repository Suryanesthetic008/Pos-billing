<PrimaryButton@Button>:
    size_hint_y: None
    height: 50
    background_normal: ""
    background_color: (0.1, 0.4, 1, 1)  # Blue
    color: (1, 1, 1, 1)
    font_size: 18
    bold: True

<SecondaryButton@Button>:
    size_hint_y: None
    height: 50
    background_normal: ""
    background_color: (0.8, 0.8, 0.8, 1)  # Grey
    color: (0, 0, 0, 1)
    font_size: 16

<Label>:
    color: (0, 0, 0, 1)

<TextInput>:
    size_hint_y: None
    height: 45
    padding: 10
    background_normal: ""
    background_color: (1, 1, 1, 1)
    foreground_color: (0, 0, 0, 1)
    font_size: 16
